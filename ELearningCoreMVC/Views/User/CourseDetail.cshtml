@model Course

<!-- Header Start -->
<div class="jumbotron jumbotron-fluid page-header position-relative overlay-bottom" style="margin-bottom: 90px;">
    <div class="container text-center py-5">
        <h1 class="text-white display-1">Course Detail</h1>
        <div class="d-inline-flex text-white mb-5">
            <p class="m-0 text-uppercase"><a class="text-white" asp-action="Index">Home</a></p>
            <i class="fa fa-angle-double-right pt-1 px-3"></i>
            <p class="m-0 text-uppercase">Course Detail</p>
        </div>
    </div>
</div>
<!-- Header End -->
<!-- Detail Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <div class="mb-5">
                    <div class="section-title position-relative mb-5">
                        <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Course Detail</h6>
                        <h1 class="display-4">
                            <label id="Label4" asp-for="Cname" ></label>
                        </h1>
                        <h2>
                            <label id="Label1" asp-for="Subname" ></label>
                        </h2>
                    </div>
                    <img class="img-fluid rounded w-100 mb-4" src="/Content/img/header.jpg" alt="Image" />
                    <p>Discover a premier online education experience at First Choice. </p>

                    <p>Our platform offers a diverse range of engaging courses curated to inspire and educate learners of all backgrounds. With personalized learning paths, expert instructors, and cutting-edge technology, we ensure each student receives the support and tools needed to succeed. Join us and embark on a journey where knowledge meets innovation, empowering you to achieve your learning goals from anywhere in the world.</p>
                </div>
            </div>
            <div class="col-lg-4 mt-5 mt-lg-0">
                <div class="bg-primary mb-5 py-3">
                    <h3 class="text-white py-3 px-4 m-0">Course Features</h3>
                    <div class="d-flex justify-content-between border-bottom px-4">
                        <h6 class="text-white my-3">Instructor</h6>
                        <h6 class="text-white my-3">BalKrishna Kheloji</h6>
                    </div>
                    <div class="d-flex justify-content-between border-bottom px-4">
                        <h6 class="text-white my-3">Rating</h6>
                        <h6 class="text-white my-3">4.5 <small>(250)</small></h6>
                    </div>
                    <div class="d-flex justify-content-between border-bottom px-4">
                        <h6 class="text-white my-3">Lectures</h6>
                        <h6 class="text-white my-3">
                            <asp:Label ID="Label2" runat="server" Text="Label"></asp:Label>
                        </h6>
                    </div>
                    <div class="d-flex justify-content-between border-bottom px-4">
                        <h6 class="text-white my-3">Skill level</h6>
                        <h6 class="text-white my-3">All Level</h6>
                    </div>
                    <div class="d-flex justify-content-between px-4">
                        <h6 class="text-white my-3">Language</h6>
                        <h6 class="text-white my-3">English</h6>
                    </div>
                    <h5 class="text-white py-3 px-4 m-0">Course Price: <label id="Label3" asp-for="Price" ></label></h5>
                    <div class="py-3 px-4">
                        <a class="btn btn-block btn-secondary py-3 px-5" asp-controller="User" asp-action="EnrollCourse">Enroll</a>
                        @* <asp:Button class="btn btn-block btn-secondary py-3 px-5" ID="Button1" runat="server" Text="Enroll" OnClick="Button1_Click" /> *@
                        <a class="btn btn-block btn-secondary py-3 px-5" asp-controller="User" asp-action="AddToCart">Add To Cart</a>
                        @* <asp:Button class="btn btn-block btn-secondary py-3 px-5" ID="Button2" runat="server" Text="Add To Cart" OnClick="Button2_Click" /> *@
                    </div>
                </div>
                <div class="mb-5">
                    <h2 class="mb-3">Categories</h2>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <a href="" class="text-decoration-none h6 m-0">Web Design</a>
                            <span class="badge badge-primary badge-pill">150</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <a href="" class="text-decoration-none h6 m-0">Web Development</a>
                            <span class="badge badge-primary badge-pill">131</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <a href="" class="text-decoration-none h6 m-0">Online Marketing</a>
                            <span class="badge badge-primary badge-pill">78</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <a href="" class="text-decoration-none h6 m-0">Keyword Research</a>
                            <span class="badge badge-primary badge-pill">56</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <a href="" class="text-decoration-none h6 m-0">Email Marketing</a>
                            <span class="badge badge-primary badge-pill">98</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Detail End -->